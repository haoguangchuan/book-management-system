{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "调试 NestJS",
        "runtimeExecutable": "yarn",
        "runtimeArgs": ["start:debug"],
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true
      },
      {
        "type": "node",
        "request": "launch",
        "name": "调试 NestJS (附加模式)",
        "runtimeExecutable": "node",
        "runtimeArgs": ["--inspect-brk=9229", "node_modules/@nestjs/cli/bin/nest.js", "start", "--watch"],
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true,
        "cwd": "${workspaceFolder}",
        "env": {
          "NODE_ENV": "development"
        }
      },
      {
        "type": "node",
        "request": "attach",
        "name": "附加到 NestJS 进程",
        "port": 9229,
        "restart": true,
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "${workspaceFolder}",
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true
      }
    ]
  }